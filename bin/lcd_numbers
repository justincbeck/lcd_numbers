#!/usr/bin/env ruby
$LOAD_PATH.unshift File.expand_path('../../lib', __FILE__)
require 'lcd_numbers'

display = LcdNumbers::Display.new(STDOUT)
while true do
  puts "Please enter a segment size:"
  STDOUT.flush
  segment_size = gets.chomp
  if segment_size == 'q'
    puts "Goodbye!"
    exit
  end
  
  puts "Please enter a number:"
  STDOUT.flush
  number = gets.chomp
  if number == 'q'
    puts "Goodbye!"
    exit
  end
  
  display.print_num(segment_size.to_i, number.to_i)
end